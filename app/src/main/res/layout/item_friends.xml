<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="7dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgFriend"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/imgFriend"
            android:fontFamily="sans-serif-light"
            android:text="10116121"
            android:textColor="#949494"
            android:textSize="12dp"
            card_view:layout_constraintStart_toEndOf="@+id/imgFriend"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvNamaFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/tvNim"
            android:layout_toRightOf="@id/imgFriend"
            android:fontFamily="@font/roboto_medium"
            android:text="Mohammad iskandar"
            android:textColor="#30354B"
            android:textSize="16dp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/imgFriend"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaFriend"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/imgFriend"
            android:fontFamily="@font/roboto_medium"
            android:text="AKB-3"
            android:layout_marginBottom="8dp"
            android:textColor="#30354B"
            android:textSize="12dp"
            card_view:layout_constraintStart_toEndOf="@+id/imgFriend"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_delete"
            tools:ignore="ContentDescription,VectorDrawableCompat" />
    </RelativeLayout>
</android.support.v7.widget.CardView>